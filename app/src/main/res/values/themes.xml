<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="MyBaseTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">?superColorPrimary</item>
        <item name="colorPrimaryVariant">?attr/superColorPrimaryVariant</item>
        <item name="colorOnPrimary">?attr/superColorOnPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">?attr/superColorSecondary</item>
        <item name="colorSecondaryVariant">?attr/superColorSecondaryVariant</item>
        <item name="colorOnSecondary">?attr/superColorOnSecondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?superColorPrimary</item>

        <!-- Customize your theme here. -->
        <item name="materialButtonStyle">@style/MyButtonStyle</item>
        <item name="textInputStyle">@style/MyInputStyle</item>
        <item name="floatingActionButtonStyle">@style/MyFloatingButtonStyle</item>
        <item name="bottomAppBarStyle">@style/MyBottomAppBarStyle</item>
        <item name="textAppearanceBody2">@style/MyTextAppearanceBody2</item>
        <item name="chipStyle">@style/MyChipStyle</item>
        <item name="shapeAppearanceSmallComponent">@style/MyShapeAppearanceSmallComponent</item>
    </style>

    <style name="MyGrayTheme" parent="MyBaseTheme">
        <item name="superColorPrimary">@color/blue_gray_600</item>
        <item name="superColorSecondary">@color/blue_gray_200</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>

    <style name="MyBlueTheme" parent="MyBaseTheme">
        <item name="superColorPrimary">@color/blue_900</item>
        <item name="superColorSecondary">@color/blue_200</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>

    <style name="MyPurpleTheme" parent="MyBaseTheme">
        <item name="superColorPrimary">@color/deep_purple</item>
        <item name="superColorSecondary">@color/purple</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>

    <style name="MyOrangeTheme" parent="MyBaseTheme">
        <item name="superColorPrimary">@color/orange_700</item>
        <item name="superColorSecondary">@color/orange_200</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>

</resources>