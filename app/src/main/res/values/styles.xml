<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyBottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">?superColorPrimary</item>
        <item name="colorOnPrimary">?superColorOnPrimary</item>
    </style>

    <style name="MyButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?colorPrimary</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:textColor">?colorOnSecondary</item>
    </style>

    <style name="MyInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">?colorPrimary</item>
        <item name="android:textColorHint">@color/blue_gray_900</item>
    </style>

    <style name="MyFloatingButtonStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:backgroundTint">?colorSecondary</item>
    </style>

    <style name="MyBottomAppBarStyle" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="backgroundTint">?colorPrimary</item>
        <item name="rippleColor">?colorOnPrimary</item>
    </style>

    <style name="MyChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="shapeAppearanceOverlay">@style/MyChipShapeAppearance</item>
    </style>

    <style name="MyShapeAppearanceSmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">0%</item>
    </style>

    <style name="MyChipShapeAppearance" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">70%</item>
    </style>

    <style name="MyTextAppearanceBody2" parent="TextAppearance.AppCompat.Body2">
        <item name="fontFamily">@font/new_font</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.0178571429</item>
    </style>

    <style name="RoundButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?colorSecondary</item>
        <item name="android:background">@drawable/background_rounded_button</item>
        <item name="android:textColor">?colorOnSecondary</item>
    </style>

</resources>